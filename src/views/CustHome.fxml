<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CustHome">
   <children>
      <Text layoutX="250.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Scheduling Buddy" />
      <HBox layoutX="22.0" layoutY="65.0" prefHeight="324.0" prefWidth="762.0">
         <children>
            <VBox prefHeight="324.0" prefWidth="763.0">
               <children>
                  <TableView fx:id="CustTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="IDCol" prefWidth="49.0" text="ID" />
                      <TableColumn fx:id="NameCol" prefWidth="87.0" text="Name" />
                        <TableColumn fx:id="AddressCol" minWidth="0.0" prefWidth="355.0" text="Address" />
                        <TableColumn fx:id="ZipCol" minWidth="0.0" prefWidth="98.0" text="Zip" />
                        <TableColumn fx:id="PhoneCol" prefWidth="172.0" text="Phone" />
                    </columns>
                  </TableView>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="createCustButton" mnemonicParsing="false" onAction="#createCust" text="Create">
                           <HBox.margin>
                              <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Button>
                        <Button fx:id="ModifyCustButton" mnemonicParsing="false" onAction="#modifyCust" text="Modify">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                           <HBox.margin>
                              <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="DeleteCustButton" mnemonicParsing="false" onAction="#deleteCust" text="Delete">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                           <HBox.margin>
                              <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
